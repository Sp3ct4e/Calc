<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bluedark"
    tools:context=".main">

    <Button
        android:id="@+id/cancel"
        android:layout_width="309dp"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/plus"
        android:layout_marginVertical="190dp"

        android:clickable="true"
        android:text="C" />

    <Button
        android:id="@+id/plus"
        android:layout_width="103dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"

        android:layout_marginVertical="190dp"
        android:clickable="true"
        android:text="+" />
    <Button
        android:id="@+id/minus"
        android:layout_width="103dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/editor"
        android:layout_alignRight="@+id/editor"

        android:layout_marginVertical="260dp"
        android:clickable="true"
        android:text="-"/>
    <Button
        android:id="@+id/divider"
        android:layout_width="103dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"

        android:layout_marginVertical="330dp"
        android:clickable="true"
        android:text="/"/>
    <Button
        android:id="@+id/result"
        android:layout_width="309dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"

        android:layout_toLeftOf="@+id/plus"
        android:layout_marginVertical="470dp"
        android:clickable="true"
        android:text="="/>
    <Button
        android:id="@+id/multiplication"
        android:layout_width="103dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"

        android:layout_alignParentRight="true"
        android:layout_marginVertical="400dp"
        android:clickable="true"
        android:text="*"/>
    <Button
        android:id="@+id/zero"
        android:layout_width="103dp"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/result"

        android:layout_marginVertical="470dp"
        android:clickable="true"
        android:text="0"/>
    <Button
        android:id="@+id/one"
        android:layout_width="103dp"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/two"

        android:layout_marginVertical="400dp"
        android:clickable="true"
        android:text="1"/>
    <Button
        android:id="@+id/two"
        android:layout_width="103dp"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/three"

        android:layout_marginVertical="400dp"
        android:clickable="true"
        android:text="2"/>
    <Button
        android:id="@+id/three"
        android:layout_width="103dp"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/multiplication"
        android:layout_marginVertical="400dp"
        android:clickable="true"
        android:text="3"/>
    <Button
        android:id="@+id/four"
        android:layout_width="103dp"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/five"
        android:layout_marginVertical="330dp"
        android:clickable="true"
        android:text="4"/>
    <Button
        android:id="@+id/five"
        android:layout_width="103dp"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/six"
        android:layout_marginVertical="330dp"
        android:clickable="true"
        android:text="5"/>
    <Button
        android:id="@+id/six"
        android:layout_width="103dp"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/divider"

        android:layout_marginVertical="330dp"
        android:clickable="true"
        android:text="6"/>
    <Button
        android:id="@+id/seven"
        android:layout_width="103dp"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/eight"
        android:layout_marginVertical="260dp"
        android:clickable="true"
        android:text="7"/>
    <Button
        android:id="@+id/eight"
        android:layout_width="103dp"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/nine"
        android:layout_marginVertical="260dp"
        android:clickable="true"
        android:text="8"/>
    <Button
        android:id="@+id/nine"
        android:layout_width="103dp"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/minus"
        android:layout_marginVertical="260dp"
        android:clickable="true"
        android:text="9"/>

    <EditText
        android:id="@+id/editor"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:textColor="@color/white"
        android:textSize="32sp"
        android:background="@color/lighpurple"
        ></EditText>





" />

</RelativeLayout>